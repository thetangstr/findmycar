# CarGPT Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./data/findmycar.db

# eBay API Configuration (Required)
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here

# OpenAI API Configuration (Optional - enables AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Chrome/Selenium Configuration
CHROME_BIN=/usr/bin/google-chrome
CHROME_OPTIONS=--headless --no-sandbox --disable-dev-shm-usage --disable-gpu

# Application Configuration
LOG_LEVEL=INFO
DEBUG=False

# Phase 2 API Integrations (Optional)
# Cars.com via Marketcheck API
MARKETCHECK_API_KEY=your_marketcheck_api_key_here

# Autobytel/AutoWeb B2B API
AUTOWEB_PARTNER_ID=your_autoweb_partner_id_here
AUTOWEB_API_KEY=your_autoweb_api_key_here

# CarsDirect Affiliate API
CARSDIRECT_AFFILIATE_ID=your_carsdirect_affiliate_id_here
CARSDIRECT_API_KEY=your_carsdirect_api_key_here  # Optional - some endpoints may require this

# Production Settings (for production deployment)
SECRET_KEY=your_secret_key_here
POSTGRES_DB=cargpt
POSTGRES_USER=cargpt
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432