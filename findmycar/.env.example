# CarGPT Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./data/findmycar.db

# eBay API Configuration (Required)
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here

# OpenAI API Configuration (Optional - enables AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Chrome/Selenium Configuration
CHROME_BIN=/usr/bin/google-chrome
CHROME_OPTIONS=--headless --no-sandbox --disable-dev-shm-usage --disable-gpu

# Application Configuration
LOG_LEVEL=INFO
DEBUG=False

# Production Settings (for production deployment)
SECRET_KEY=your_secret_key_here
POSTGRES_DB=cargpt
POSTGRES_USER=cargpt
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432